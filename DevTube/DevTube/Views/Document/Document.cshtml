@model DevTube.Models.DocumentViewModel

<div style="padding-top: 40px">
    @using (Html.BeginForm("NewDocument","Document",FormMethod.Post))
    { 

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Id, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control",@readonly=true })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Header,new { @class= "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Header, new { @rows = 3, @class = "form-control"  })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ContentType, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ContentType, new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Path, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Path, new { @rows = 3, @class = "form-control"  })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Size, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Size, new { @type = "number", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Thumb, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    [picture here]
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Body, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Body, new {@rows = 4, @class = "form-control"})
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Сохранить</button>
                </div>
            </div>

        </div>
    }
</div>